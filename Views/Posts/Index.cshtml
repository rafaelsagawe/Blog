@model IEnumerable<Blog.Models.Posts>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de postagens</h1>

<p>
    <a  asp-action="Create">Nova postagem</a>
</p>

<div class="col">
    <!-- div para aplicação do Masonry-->
    <div class="row" data-masonry='{"horizontalOrder": true }'>
                @foreach (var item in Model)
        {
            <div class="col-3 my-3">

                <div class="card shadow ">

                    <a class="text-dark text-center card-header">@Html.DisplayFor(Modelitem => item.NomePost)</a>

                    <div class="card-body">
                        <p>
                            @Html.DisplayFor(modelItem => item.ResumoPost)
                        </p>
                    </div>

                    <div class="card-footer">
                        <p>
                            @Html.DisplayFor(modelItem => item.UsuarioCriador)
                            @Html.DisplayFor(modelItem => item.Categorias.Categoria)
                        </p>
                    </div>

                </div>
            </div>
        }
</div>

@section Scripts{
    <!-- Adição da biblioteca JavaScrit Masonry para criação de layout em grade -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.2/masonry.pkgd.min.js"></script>
}